{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@components": ["./src/components/"],
      "@components/*": ["./src/components/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@layouts": ["./src/layout"],
      "@layouts/*": ["./src/layout/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
